<?xml version="1.0" encoding="UTF-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_title" >

    <PreferenceCategory
            android:key="status_bar_general_category"
            android:title="@string/general_string" >

            <PreferenceScreen
                    android:key="clock_style_pref"
                    android:fragment="com.android.settings.broken.StatusBarClockStyle"
                    android:title="@string/status_bar_clock" />

            <SwitchPreference
                    android:defaultValue="false"
                    android:key="status_bar_native_battery_percentage"
                    android:title="@string/status_bar_native_battery_percentage_title"
                    android:summary="@string/status_bar_native_battery_percentage_summary" />

            <com.android.settings.broken.SystemSettingSwitchPreference
                    android:key="status_bar_show_battery_text"
                    android:title="@string/status_bar_toggle_battery_text"
                    android:summary="@string/status_bar_toggle_battery_summary"
                    android:defaultValue="false" />

            <SwitchPreference
                    android:defaultValue="false"
                    android:key="status_bar_quick_qs_pulldown"
                    android:title="@string/status_bar_quick_qs_pulldown_title"
                    android:summary="@string/status_bar_quick_qs_pulldown_summary" />

            <com.android.settings.terminus.SystemSettingSwitchPreference
                    android:key="double_tap_sleep_gesture"
                    android:title="@string/double_tap_to_sleep_title"
                    android:summary="@string/double_tap_to_sleep_summary"
                    android:defaultValue="true" />

            <com.android.settings.terminus.SystemSettingSwitchPreference
                    android:key="status_bar_show_weather"
                    android:title="@string/status_bar_show_weather_title"
                    android:summary="@string/status_bar_show_weather_summary"
                    android:defaultValue="true" />

    </PreferenceCategory>
</PreferenceScreen>
